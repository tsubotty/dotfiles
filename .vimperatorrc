"=============================================
" Vimp Config
"=============================================
" スクロールの端などの際に出るbeepをoff
" Beep設定
set visualbell
hi Bell opacity: .3;
" 検索で大文字小文字を無視
set ignorecase
" hint用設定 キーボード中段のみを使う
set hintchars=lsjdkfgh
" エディタをMacVim-KaoriYaに(mvimスクリプトをダウンロードして使う)
set editor='/usr/bin/mvim -f'

" Hint
hi Hint z-index:5000; font-size:14px; color:white; background-color:blue; border-color:ButtonShadow; border-width:0px; border-style:solid; padding:0px 2px 0px 2px; position:absolute; font-family: Menlo, Consolas, Monaco, monospace; text-transform: uppercase;

" タブ番号をタブ上に表示
set tabnumbers
style -name fix-tabnumbers chrome://* #TabsToolbar { counter-reset: tabnumber !important; }

" Normal mode のタブ移動を hl で
nmap l gt
nmap h gT

" コマンド入力を ; で
nnoremap ; :
nnoremap : ;

" タイトル
set titlestring=Firefox
