"=============================================
" Vimp Config
"=============================================
" スクロールの端などの際に出るbeepをoff
" Beep設定
set visualbell
highlight! Bell opacity: .3;
" 検索で大文字小文字を無視
set ignorecase
" hint用設定 キーボード中段のみを使う
set hintchars=lsjdkfgh
" エディタをMacVim-KaoriYaに(mvimスクリプトをダウンロードして使う)
set editor='/usr/bin/mvim -f'
" 自動フォーカスオフ
set focuscontent
"カラースキーム
colorscheme vimplight
" コマンドライン自動補完強化
set autocomplete
set complete=sl
" GUI
" set gui=addons,bookmarks,nomenu,nonavigation,tab
" ステータスライン
set laststatus=0
set showstatuslinks=0
"set fullscreen
set mainecoon=ac

" Hint
highlight! Hint font-size:13px;color:#FFFF00;background-color:#0000FF;opacity:0.7; border-radius: 3px; -moz-border-radius-toplight: 3px;border-color:red;border-width:0px;border-style:solid;padding:0px 2px 0px 2px;position:absolute;font-family: Menlo, Consolas, Monaco, monospace;text-transform: uppercase;
hi HintElem background-color: transparent; color: #FF0000; opcacity:0.0;
hi HintActive background-color: transparent; border: 1px #ef6f6f dotted; -moz-border-radius: 10px; padding: 0.1em; font-weight: bold;

" prompt非表示
js document.getElementById("liberator-commandline-prompt-text").hidden=true

" タブ番号をタブ上に表示
set tabnumbers
style -name fix-tabnumbers chrome://* #TabsToolbar { counter-reset: tabnumber !important; }

" Normal mode のタブ移動を hl で
nmap l gt
nmap h gT

" コマンド入力を ; で
nnoremap ; :
nnoremap : ;

" タイトル
set titlestring=
" Evernote Clearly
noremap e :js __readable_by_evernote.readable_by_evernote__menu__call(buffer.URL);
noremap E :js __readable_by_evernote.__readable_by_evernote__launch(true);<CR>
" Evernote Clip :clip
"command clip javascript Evernote.Overlay.init(null)

" 移動量
noremap j 4j
noremap k 4k


"Google reader 有効
"autocmd LocationChange .* js modes.passAllKeys = false
"autocmd LocationChange www\\.google\\.(co\\.jp|com)/reader js modes.passAllKeys = true

"migemofind
"let g:migemized_find_language=Japanese = "cat";

"dとxを入れ替え
nnoremap x d
nnoremap d x

"<C-G>に<ESC>
nnoremap <C-G> <ESC>
inoremap <C-G> <ESC>

"[[と]]でページをめくる。日本語ページ対応
set nextpattern=\bnext\b,\bmore\b,next,^次(の)?ページ,\b次.*,→\b,^>$,^(>>|≫)$,^(>|≫),(>|≫)$,^次(へ|の|ペ),^続き,\bnext\b,^>$,^(>>|»)$,^(>|»),(>|»)$,\bmore\b
set previouspattern=\bprev|previous\b,prev,^前(の)?ページ,\b前.*,\b←,^<$,^(<<|≪)$,^(<|≪),(<|≪)$,^前(へ|

"埋め込み動画用
let g:hints_for_embedded_mode="e"
"cnoremap st stplay
"cnoremap pa stpause

"new tab
"map t ;tabopen google<CR>

"open tab 
"map o ;open google 

"read vimperatorrc
map S ;source ~/.vimperatorrc<CR>

"tag open
map B ;bmarks! -tags 
map <C-C> ;bmarks! -tags 

"INSERT
noremap i gi
noremap gi i

"stplay
map <C-S> ;stplay<CR>
